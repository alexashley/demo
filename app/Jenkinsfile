pipeline {
    agent {
        kubernetes {
            yamlFile "app/jenkins-agent.yaml"
        }
    } 
    stages {
        stage('echo') {
            steps {
              container('kaniko') {
                echo 'hello world'
                sh 'docker build -t node/sample-web-app ./app'
                sh 'docker images'
              }
            }
        }
    }
}
